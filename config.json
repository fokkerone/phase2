{
  "name": "mmsfrontend",
  "title": "Mmsfrontend",
  "description": "The best project ever.",
  "version": "0.1.0",

  "generator": {
    "name": "basic-template",
    "path": "/Users/andreaswalter/Work/Web/gulpsetup/basic-template"
  },
  "server": {

    "development": {
      "watchOptions": {
          "debounceDelay": 500
      },
      "src": "dev",
      "server": {
        "baseDir": [
          "app"
        ]
      },
      "port": 9999,
      "open": false,
      "notify": false,
      "reloadDelay": 500,
      "paths": {
        "production": "app",
        "assets": "assets"
      },
      "files": [
        "/css/*.css",
        "/js/*.js",
        "/images/**",
        "/fonts/*"
      ]
    }
  },

  "jade": {
    "baseDir": "./dev/jade/",
    "src": "./dev/jade/**/*.jade",
    "dest": "./app"
  },
  "scss": {
    "src": "./dev/scss/**/*.scss",
    "dest": "./app/_assets/css",
    "options": {
      "precision": 10,
      "noCache": true,
      "compass": false,
      "outputStyle": "nested",
      "bundleExec": false,
      "sourcemap": true,
      "sourcemapPath": "./maps"
    }
  },

  "autoprefixer": {
        "browsers": ["last 3 version"]
  },

  "build": {
    "jade": {
    "baseDir": "../dev/jade/",
    "src": "../dev/jade/**/*.jade",
    "dest": "build"
    }
  }
}
